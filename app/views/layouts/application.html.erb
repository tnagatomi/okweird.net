  <header>
    <a href="/">
        <h1>It's okay to be weird</h1>
    </a>
    <nav>
        <a href="<%= root_path %>">About</a>
        <a href="<%= posts_path %>">Blog</a>
        <a href="<%= history_path %>">History</a>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>

